{
    "manifest_version":2,
    "name":"HTML5 block",
    "version":"0.0.1",

    "description":"Blocks WebGL and canvases for a faster, cleaner browsing experience",

    "icons": {
        "16":"assets/images/icon-16.png",
        "48":"assets/images/icon-48.png",
        "128":"assets/images/icon-128.png"
    },

    "browser_action":{
        "default_icon":{
            "19":"assets/images/icon-19-disabled.png"
        },
        "default_title":"HTML5 block",
        "default_popup":"index.html"
    },

    "background": {
        "scripts":[
            "assets/scripts/url.js",
            "assets/scripts/background.js"
        ],
        "persistent":false
    },

    "options_page":"options.html",

    "content_scripts":[
        {
            "matches":["<all_urls>"],
            "run_at":"document_start",
            "js":[
                "assets/scripts/jquery.js",
                "assets/scripts/url.js",
                "assets/scripts/content.js"
            ]
        }
    ],

    "permissions":[
        "storage",
        "tabs"
    ]
}
